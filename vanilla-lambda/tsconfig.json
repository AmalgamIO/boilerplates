{
  "compilerOptions": {
    "types": ["vitest"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@app/*": ["src/main/*"]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src"]
}